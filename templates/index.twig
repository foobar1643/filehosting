{% extends "skeleton.twig" %}
{% block pageTitle %} {% trans %}Home page{% endtrans %} {% endblock %}
{% block pageBody %}
<div class="container-fluid">
    {% if popularFiles == null and lastFiles == null %}
        <h2 class="col-md-4 col-md-offset-5">{% trans %}The file list is empty.{% endtrans %}</h2>
    {% else %}
        <div class="row" id="main-page-row">
            <div class="panel panel-default col-md-4 col-md-offset-2">
                <div class="panel-body">
                    <h4>{% trans %}Popular files{% endtrans %}</h4>
                    <ol>
                        {% for popularFile in popularFiles %}
                            <li><a href="{{ linkHelper.getLinkToFile(popularFile) }}">{{ popularFile.getClientFilename }}</a></li>
                        {% endfor %}
                    </ol>
                </div>
            </div>
            <div class="panel panel-default col-md-4">
                <div class="panel-body">
                    <h4>{% trans %}Last files{% endtrans %}</h4>
                    <ol>
                        {% for lastFile in lastFiles %}

                            <li><a href="{{ linkHelper.getLinkToFile(lastFile) }}">{{ lastFile.getClientFilename }}</a></li>
                        {% endfor %}
                    </ol>
                </div>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}