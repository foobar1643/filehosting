{% extends "skeleton.twig" %}
{% block pageTitle %} Поиск {% endblock %}
{% set navLink = 'search' %}
{% block pageBody %}
<div class="container-fuild">
    {% block error %}
        {% if error %}
            <div id="search-error-report" class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                <span class="sr-only">Ошибка:</span>
                Вы не заполнили поле поиска
            </div>
        {% endif %}
    {% endblock %}
    <form method="get">
        <div class="row" id="search-box">
            <div class="col-lg-6 col-lg-offset-3">
                <div class="input-group">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">Поиск</button>
                    </span>
                    <input type="text" name="query" class="form-control" value="{{ query }}" placeholder="Введите часть имени файла" required>
                </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
        </div>
    </form>
    <div class="panel panel-default col-md-6 col-md-offset-3" id="search-panel">
        <div class="panel-body">
            {% if (query is not null) and (files is not null) %}
                <h4>Показаны результаты по запросу: <i>&laquo;{{ query }}&raquo;</i></h4>
                {% for i in range(0, files|length - 1) %}
                    {{ i + 1 }}. <a href="/file/{{ files[i].id }}">{{ files[i].name }}</a><br>
                {% endfor %}
                {% if pager.getPages > 1 %}
                    <nav>
                        <ul class="pagination">
                            <li {% if page == 1 %} class="disabled" {% endif %}>
                                <a {% if page != 1 %} href="{{ pager.getLink(page - 1) }}" {% endif %} aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            {% for i in range(1, pager.getPages) %}
                                {% if page == i %}
                                    <li class="active"><a>{{ i }}</a></li>
                                {% else %}
                                    <li><a href="{{ pager.getLink(i) }}">{{ i }}</a></li>
                                {% endif %}
                            {% endfor %}
                            <li {% if page == pager.getPages %} class="disabled" {% endif %}>
                                <a {% if page != pager.getPages %} href="{{ pager.getLink(page + 1) }}" {% endif %} aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                {% endif %}
            {% elseif (query is not null) and (files is null) %}
                <h4>По запросу <i>&laquo;{{ query }}&raquo;</i> ничего не найдено.</h4>
            {% elseif query is null %}
                <h4>Результаты поиска</h4>
                Здесь будут отображаться результаты поиска. Введите запрос и нажмите кнопку Поиск чтобы начать.
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}